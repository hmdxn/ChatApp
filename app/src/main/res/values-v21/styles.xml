<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/light_font</item>
    </style>
    
    <style name="user_profile_details_et_dimensions">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:enabled">false</item>
        <item name="android:textColorHint">@color/charcoal</item>
        <item name="android:textColor">@color/edit_text_details_drawable</item>
    </style>
    
</resources>